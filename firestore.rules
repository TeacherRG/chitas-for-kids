rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Правила для коллекции userProgress
    // Каждый пользователь может читать и писать только свои данные
    match /userProgress/{userId} {
      // Пользователь может читать и изменять только свой документ
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Запретить доступ ко всем остальным коллекциям по умолчанию
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
